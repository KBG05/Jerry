# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/blankpoint
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=blankpoint

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=BlankPoint API
API_VERSION=1.0.0

# CORS Configuration (comma-separated origins, or "*" for all)
CORS_ORIGINS=*

# Rate Limiting (format: "count/period" e.g., "100/minute", "1000/hour")
RATE_LIMIT_PER_MINUTE=100/minute

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Uvicorn Configuration
WORKERS_COUNT=1
RELOAD=false

# Encryption
ENCRYPTION_KEY=generate-using-cryptography-fernet-generate-key

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8000/api/v1/auth/github/callback

# Frontend
FRONTEND_CALLBACK_URL=http://localhost:3000/onboarding/callback
