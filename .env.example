# Environment variables for docker-compose
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=blankpoint

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=BlankPoint API
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100/minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Uvicorn
WORKERS_COUNT=1
RELOAD=false
